<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OTP">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/b1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/b2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:hint="0"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="5dp"

        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/num_one"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/b2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/b1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:hint="0"
        android:layout_marginLeft="5dp"
        app:layout_constraintRight_toLeftOf="@id/b3"

        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/num_two"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/b3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/b2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:hint="0"
        android:layout_marginLeft="5dp"
        app:layout_constraintRight_toLeftOf="@id/b4"

        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/num_three"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/b4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/b3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="5dp"
        android:hint="0"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="30dp"

        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/num_four"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/b4"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Timer Text"
        android:padding="20sp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20sp"
        />
<com.google.android.material.button.MaterialButton
    android:id="@+id/resend_otp_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/b4"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="30dp"
    android:text="Resend OTP"
    android:textSize="16sp"
    />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/resend_otp_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="30dp"
        android:text="Continue"
        android:textSize="20sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>